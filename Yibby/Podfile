source 'https://bitbucket.org/kishykumar/yibbypods'
source 'https://github.com/ello/cocoapod-specs.git'
source 'https://github.com/CocoaPods/Specs.git'
project '../Yibby'

platform :ios, '8.0'
use_frameworks!

def testing_pods
    pod 'Quick'
    pod 'Nimble', '~> 5.0.0'
    pod 'Nimble-Snapshots'
end

def shared_pods
    pod 'FoldingCell'
    pod 'Font-Awesome-Swift', '~> 1.6.2'
    pod 'Alamofire', '~> 4.0'
    pod 'GoogleMaps'
    pod 'Google/CloudMessaging'
    #pod 'BaasBoxSDK’, :git => 'https://kishykumar@bitbucket.org/kishykumar/baasboxiossdk.git'
    pod 'BaasBoxSDK’
    pod 'SwiftyJSON'
    pod 'MMDrawerController', '~> 0.5.7'
    #pod 'TTRangeSlider'
    pod 'BButton'
    pod 'TextFieldEffects'
    pod 'ActionSheetPicker-3.0', '~> 2.2.0'
    pod 'SwiftValidator', :git => 'https://github.com/jpotts18/SwiftValidator.git', :branch => 'master'
    pod 'PhoneNumberKit', '~> 1.3'
    pod 'Presentr'
    pod 'KSCrash'
    
    #pod 'SVProgressHUD'
    pod 'MBProgressHUD'
    pod 'Cosmos', '~> 11.0'
    pod 'StepSlider'
    pod 'AMPopTip'
    pod 'CRToast', '~> 0.0.7'
    pod 'LTMorphingLabel'
    pod 'M13ProgressSuite'

    #pod 'CocoaLumberjack/Swift', '~> 3.0.0'
    pod 'CocoaLumberjack/Swift', :git => 'https://github.com/CocoaLumberjack/CocoaLumberjack', :branch => 'swift_3'
    
    #pod 'ASProgressPopUpView'
    pod 'LaunchScreen'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'DZNEmptyDataSet'
    #pod 'ElloOSSUIFonts'
    #pod 'SVGKit', git: 'https://github.com/SVGKit/SVGKit.git', :branch => '2.x'
    pod 'PINRemoteImage'
    pod 'Stripe'
    pod 'Braintree'
    pod 'CardIO'
    pod 'XLPagerTabStrip', '~> 6.0'
    pod 'FDStackView', '~> 1.0'
    pod 'IQKeyboardManagerSwift'
    pod 'SwiftKeychainWrapper'
    pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift3'
    pod 'ISHPullUp'
    pod 'AlamofireObjectMapper', '~> 4.0'
    pod 'ImagePicker'
    pod 'Lightbox'
    pod 'Google/SignIn'
    pod 'GooglePlaces'
    pod 'AccountKit'
    
    #pod 'ReachabilitySwift', :git => 'https://github.com/ashleymills/Reachability.swift'
    
    #pod 'ECSlidingViewController', '~> 2.0.3'
    #pod 'PKRevealController'
end


target 'Yibby' do
    shared_pods
end

target 'YibbyTests' do
    shared_pods
    testing_pods
end


post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '3.0'
        end
    end
    
    puts("Update debug pod settings to speed up build time")
    Dir.glob(File.join("Pods", "**", "Pods*{debug,Private}.xcconfig")).each do |file|
        File.open(file, 'a') { |f| f.puts "\nDEBUG_INFORMATION_FORMAT = dwarf" }
    end
end
